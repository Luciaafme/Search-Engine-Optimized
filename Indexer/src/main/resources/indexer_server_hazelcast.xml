<hazelcast xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://www.hazelcast.com/schema/config"
           xsi:schemaLocation="http://www.hazelcast.com/schema/config
                              http://www.hazelcast.com/schema/config/hazelcast-config-3.12.xsd">

    <group>
        <name>my-distributed-books</name>
    </group>

    <network>
        <port auto-increment="true">5040</port>
        <join>
            <multicast enabled="false"/> <!-- Desactivar multicast -->
            <tcp-ip enabled="true">
                <member>hazelcast-server-1:5040</member>
                <member>hazelcast-server-2:5040</member>
                <member>hazelcast-server-3:5040</member>
                <member>hazelcast-server-4:5040</member>
                <!-- Agregar más nodos aquí -->
            </tcp-ip>
        </join>
    </network>
</hazelcast>